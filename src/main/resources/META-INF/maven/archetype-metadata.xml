<archetype-descriptor
        name="maven-archetype-mc">
    <fileSets>
        <fileSet filtered="true" packaged="true">
            <directory>template</directory>
            <includes>
                <include>**/*</include>
                <include>.gitignore</include>
                <include>.github/**/*</include>
            </includes>
        </fileSet>
    </fileSets>
    <requiredProperties>
        <requiredProperty key="name"/>
    </requiredProperties>
</archetype-descriptor>